{
  "name": "kanon-gaming-be",
  "version": "1.0.0",
  "description": "Kanon Gaming back-end",
  "main": "index.js",
  "repository": "git@github.com:francescochiapello/kanon-gaming-be.git",
  "author": "Francesco Chpl <francesco@chpl.it>",
  "license": "MIT",
  "private": true,
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": ">= 16.0.0",
    "yarn": ">= 0.18.0"
  },
  "scripts": {
    "start": "NODE_ENV=develop nodemon ./src/index.js",
    "commit": "npx git-cz",
    "lint": "tsc --noEmit && eslint --ext ts,tsx src/**/*.ts",
    "clean": "rm -rf ./dist",
    "build": "rm -rf ./build && yarn lint && npx tsc -p tsconfig.json --skipLibCheck",
    "start:prod": "NODE_ENV=develop node ./dist",
    "debug": "nodemon",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/koa": "^2.13.5",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.14",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "dependencies": {
    "@koa/cors": "^3.4.1",
    "apisauce": "^2.1.6",
    "dotenv": "^16.0.1",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-router": "^12.0.0",
    "winston": "^3.8.1"
  }
}
