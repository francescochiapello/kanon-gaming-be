{
  "compilerOptions": {
    "outDir": "dist/",                    // target for compiled files
    "allowSyntheticDefaultImports": true, // no errors on commonjs default import
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictBindCallApply": true,
    "allowJs": false,                     // include js files
    "checkJs": false,                     // typecheck js files
    "declaration": false,                 // don't emit declarations
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,                // importing helper functions from tslib
    "noEmitHelpers": true,                // disable emitting inline helper functions
    "lib": ["es2018"],                    // enabled features up until and including ["version"]
    "target": "es2018",                   // compiler target
    "module": "commonjs",                 // "es2015" for tree-shaking
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
